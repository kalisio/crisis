{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/events.update.json#",
  "title": "schemas.OBJECT_NAME",
  "description": "Event update schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.EVENTS_NAME_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "label": "schemas.EVENTS_DESCRIPTION_FIELD_LABEL"
      }
    },
    "location": {
      "type": "object", 
      "draggable": true,
      "field": {
        "component": "KLocationField",
        "label": "schemas.EVENTS_LOCATION_FIELD_LABEL"
      }
    },
    "expireAt": {
      "type": "string", 
      "group": "schemas.EVENTS_ADVANCED_SETTINGS",
      "format": "date-time",
      "field": {
        "component": "form/KDatetimeField",
        "label": "schemas.EVENTS_EXPIRE_AT_FIELD_LABEL",
        "type": "datetime",
        "defaultOffset": 604800
      }
    },
    "participants": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "subfield": "email",
        "baseQuery": {
          "$select": ["_id", "profile.name", "email"]
        },
        "icon": {
          "name": "person"
        }
      },
      {
        "service": "groups",
        "field": "name",
        "subfield": "description",
        "baseQuery": {
          "$select": ["_id", "name", "description"]
        },
        "icon": {
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_PARTICIPANTS_FIELD_LABEL"
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "subfield": "email",
        "baseQuery": {
          "$select": ["_id", "email", "profile.name"]
        },
        "icon": {
          "name": "person"
        } 
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": { 
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_COORDINATORS_FIELD_UPDATE_LABEL"
      }
    },
    "notification": {
      "type": "boolean",
      "group": "schemas.EVENTS_ADVANCED_SETTINGS",
      "default": true,
      "field": {
        "component": "form/KToggleField",
        "label": "schemas.EVENTS_NOTIFICATION_FIELD_UPDATE_LABEL",
        "checked-icon": "notifications",
        "unchecked-icon": "notifications_off"
      }
    }
  },
  "required": ["name", "expireAt", "participants", "coordinators", "notification"]
}

