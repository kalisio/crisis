{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/events.create.json#",
  "title": "schemas.EVENTS_CREATE_TITLE",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.EVENTS_NAME_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string",
      "field": {
        "component": "form/KTextareaField",
        "label": "schemas.EVENTS_DESCRIPTION_FIELD_LABEL"
      }
    },
    "objective": {
      "type": "string",
      "field": {
        "component": "form/KSelectField",
        "label": "schemas.EVENTS_OBJECTIVE_FIELD_LABEL",
        "options": []
      }
    },
    "location": {
      "type": "object", 
      "draggable": true,
      "field": {
        "component": "form/KLocationField",
        "label": "schemas.EVENTS_LOCATION_FIELD_LABEL",
        "draw": true
      }
    },
    "expireAt": {
      "type": "string",
      "group": "schemas.EVENTS_ADVANCED_SETTINGS",
      "format": "date-time",
      "field": {
        "component": "form/KDatetimeField",
        "label": "schemas.EVENTS_EXPIRE_AT_FIELD_LABEL",
        "type": "datetime",
        "defaultOffset": 604800
      }
    },
    "participants": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "description": "email",
        "baseQuery": {
          "$select": ["_id", "profile.name", "email"]
        },
        "icon": {
          "name": "person"
        }
      },
      {
        "service": "groups",
        "field": "name",
        "description": "description",
        "baseQuery": {
          "$select": ["_id", "name", "description"]
        },
        "icon": {
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "las la-tag"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_PARTICIPANTS_FIELD_LABEL"
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "default": [],
      "services": [{
        "service": "members",
        "field": "profile.name",
        "description": "email",
        "baseQuery": {
          "$select": ["_id", "email", "profile.name"]
        },
        "icon": {
          "name": "person"
        } 
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": { 
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_COORDINATORS_FIELD_CREATE_LABEL"
      }
    },
    "attachments": { 
      "type": "array",
      "group": "schemas.EVENTS_ADVANCED_SETTINGS",
      "field": {
        "component": "form/KAttachmentField",
        "label": "schemas.EVENTS_ATTACHMENTS_FIELD_LABEL",
        "service": "storage",
        "acceptedFiles": "image/*,application/pdf",
        "multiple": true,
        "maxFilesize": 10,
        "autoProcessQueue": false,
        "resourcesService": "events",
        "storagePath": "<%= id %>/<%= file.name %>"
      }
    },
    "hasWorkflow": {
      "type": "boolean", 
      "group": "schemas.EVENTS_ADVANCED_SETTINGS",
      "default": true,
      "field": {
        "component": "form/KToggleField",
        "label": "schemas.EVENTS_HAS_WORKFLOW_FIELD_LABEL",
        "icon": "fa-retweet"
      }
    }
  },
  "required": ["name", "hasWorkflow"]
}

