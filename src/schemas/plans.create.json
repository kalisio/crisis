{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/plans.create.json#",
  "title": "schemas.PLANS_CREATE_TITLE",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 2,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.PLANS_NAME_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "label": "schemas.PLANS_DESCRIPTION_FIELD_LABEL"
      }
    },
    "objectives": {
      "type": "array",
      "field": {
        "component": "form/KChipsField",
        "label": "schemas.PLANS_OBJECTIVES_FIELD_LABEL"
      }
    },
    "location": {
      "type": "object", 
      "draggable": true,
      "field": {
        "component": "form/KLocationField",
        "label": "schemas.PLANS_LOCATION_FIELD_LABEL",
        "draw": true
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "default": [],
      "services": [{
        "service": "members",
        "field": "profile.name",
        "subfield": "email",
        "baseQuery": {
          "$select": ["_id", "email", "profile.name"]
        },
        "icon": {
          "name": "person"
        } 
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": { 
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.PLANS_COORDINATORS_FIELD_CREATE_LABEL"
      }
    }
  },
  "required": ["name"]
}